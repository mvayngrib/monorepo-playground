{
  "name": "monorepo-playground",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "localnpm": "docker run -d --rm --name verdaccio -p 4873:4873 verdaccio/verdaccio",
    "changeset": "changeset add --open",
    "publish": "lerna publish --no-push",
    "release": "lerna exec --concurrency 1 -- semantic-release -e semantic-release-monorepo --tag-format='${LERNA_PACKAGE_NAME}-v\\${version}' --no-ci",
    "release:dry-run": "yarn release --dry-run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "publishConfig": {
    "registry": "http://localhost:4873/"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.0",
    "lerna": "^5.1.2",
    "semantic-release": "^19.0.3",
    "semantic-release-monorepo": "^7.0.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "master"
    ],
    "repositoryUrl": "https://github.com/mvayngrib/monorepo-playground",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm"
    ]
  }
}
